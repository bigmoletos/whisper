{
  "enabled": true,
  "debug_mode": false,
  "config_version": "1.0.0",
  
  "spec_compliance": {
    "requirements_validation": true,
    "ears_pattern_enforcement": true,
    "property_generation": true,
    "task_breakdown_automation": true,
    "incose_quality_rules": true,
    "traceability_matrix": true
  },
  
  "amazon_integration": {
    "codewhisperer_enabled": true,
    "formal_verification": false,
    "aws_region": "us-east-1",
    "credentials_profile": null,
    "openrewrite_recipes": [
      "org.openrewrite.java.cleanup.Cleanup",
      "org.openrewrite.java.migrate.DeprecatedAPIs",
      "org.openrewrite.java.security.SecureTempFileCreation"
    ],
    "codewhisperer": {
      "enabled": true,
      "language_preferences": ["python", "javascript", "typescript"],
      "suggestion_threshold": 0.7,
      "auto_accept_threshold": 0.9,
      "context_window_size": 1000,
      "max_suggestions": 5
    },
    "autonomous_agents": {
      "enabled": true,
      "agent_types": ["code_review", "performance_optimization", "security_audit"],
      "schedule_interval": 3600,
      "max_concurrent_agents": 2,
      "timeout_seconds": 300
    }
  },
  
  "property_testing": {
    "hypothesis_iterations": 100,
    "testing_framework": "hypothesis",
    "audio_test_patterns": ["valid_audio", "invalid_audio", "edge_case_audio"],
    "round_trip_testing": true,
    "invariant_checking": true,
    "metamorphic_testing": true,
    "error_handling_testing": true,
    "coverage_threshold": 0.8,
    "hypothesis": {
      "max_examples": 100,
      "deadline": 10000,
      "verbosity": "normal",
      "database_file": null,
      "suppress_health_check": []
    }
  },
  
  "performance_monitoring": {
    "enabled": true,
    "metrics_collection_interval": 60,
    "health_check_interval": 300,
    "log_level": "INFO",
    "log_file": "modernization.log",
    "metrics_retention_days": 30,
    "alert_thresholds": {
      "cpu_usage": 0.8,
      "memory_usage": 0.9,
      "error_rate": 0.1,
      "latency_p95": 5.0
    }
  },
  
  "legacy_compatibility": {
    "maintain_api_compatibility": true,
    "legacy_config_support": true,
    "migration_mode": false,
    "rollback_enabled": true,
    "backup_before_changes": true,
    "compatibility_checks": ["api", "config", "data_format"]
  }
}